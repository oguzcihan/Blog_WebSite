@model List<BlogSite.Models.Blog>

@{
    ViewBag.Title = "Blog";
}


<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div id="hot-post" class="row hot-post">
            <div class="col-md-8 hot-post-left">
                @foreach (var item in Model)
                {
                    if (item.Anasayfa == true)
                    {

                        <!-- post -->
                        <div class="post post-thumb">
                            <a class="post-img" href="/Blogs/Details/?id=@item.Id"><img src="~/upload/@item.Resim" alt=""></a>
                            <div class="post-body">
                                <div class="post-category">
                                    <a>@item.Category.KategoriAdi</a>
                                </div>
                                <h3 class="post-title title-lg"><a href="/Blogs/Details/?id=@item.Id">@item.Baslik</a></h3>
                                <ul class="post-meta">
                                    <li><a href="/Home/About">Oğuz Cihan</a></li>
                                    <li>@item.EklemeTarih</li>
                                </ul>
                            </div>
                        </div>
                    }
                }
                <!-- /post -->
            </div>
            <div class="col-md-4 hot-post-right">
                @foreach (var item in Model)
                {
                    if (item.AnasayfaSag == true)
                    {
                        <!-- post -->
                        <div class="post post-thumb">
                            <a class="post-img" href="/Blogs/Details/?id=@item.Id"><img src="~/upload/@item.Resim" alt=""></a>
                            <div class="post-body">
                                <div class="post-category">
                                    <a>@item.Category.KategoriAdi</a>

                                </div>
                                <h3 class="post-title"><a href="/Blogs/Details/?id=@item.Id">@item.Baslik</a></h3>
                                <ul class="post-meta">
                                    <li><a href="/Home/About">Oğuz Cihan</a></li>
                                    <li>@item.EklemeTarih</li>
                                </ul>
                            </div>
                        </div>
                    }
                    <!-- /post -->
                }

            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
