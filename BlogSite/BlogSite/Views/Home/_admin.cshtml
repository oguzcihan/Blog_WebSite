@model IEnumerable<BlogSite.Models.Blog>
@{
    ViewBag.Title = "_admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="au-card au-card--no-shadow au-card--no-pad m-b-40 au-card--border">
            <div class="au-card-title" style="background-image:url('images/bg-title-01.jpg');">
                <div class="bg-overlay bg-overlay--blue"></div>
                <h3>
                    <i class="zmdi zmdi-account-calendar"></i>
                    <script>document.write(new Date().getFullYear());</script> Paylaşımlar
                </h3>
                <button class="au-btn-plus">
                    <a href="/Blogs/Create" class="zmdi zmdi-plus"></a>
                </button>
            </div>
            <div class="au-task js-list-load au-task--border">
                <div class="au-task__title">
                    <p>Web Sitenizde Olan Postlar</p>
                </div>
                <div class="au-task-list js-scrollbar3">
                    @foreach (var item in Model)
                    {
                        <div class="au-task__item au-task__item--success">
                            <div class="au-task__item-inner">
                                <h5 class="task">
                                    <a href="#">@item.Baslik</a>
                                </h5>
                                <p>
                                    @if (item.Icerik.Length > 86)
                                    {
                                        @(item.Icerik.Substring(0, 85) + "...")
                                    }
                                    else
                                    {
                                        @item.Icerik
                                    }
                                </p>
                                <span class="time">@item.EklemeTarih</span>
                            </div>
                        </div>
                    }


                </div>
                <div class="au-task__footer">
                    <button class="au-btn au-btn-load js-load-btn">Devamını Gör</button>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-lg-12">
        <!-- RECENT REPORT-->
        <div class="recent-report3 m-b-40">
            <div class="title-wrap">
                <h3 class="title-3">Son Paylaşılan</h3>

            </div>

            <div class="chart-wrap">
                paylaşılan postlar olacak

            </div>
        </div>
        <!-- END RECENT REPORT-->
    </div>

</div>